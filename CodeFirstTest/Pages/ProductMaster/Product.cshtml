@page
@model CodeFirstTest.Pages.ProductMaster.ProductModel
@{
}

<table class="table" >
    <thead>
        <tr>
            <th>ID</th>
            <th>PRODUCT NAME</th>
            <th>DESCRIPTION</th>
            <th>PRICE</th>
            <th>PRODUCT TIME</th> 
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Products)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.CreatedAt</td>

                <td>
                    <form method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">
                            <i class="bi bi-trash3-fill"></i>
                        </button>
                    </form>
                </td>
                <td>
                    <form method="get" asp-page="/ProductMaster/EditProduct">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

</table>
